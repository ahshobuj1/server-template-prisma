generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  DOCTOR
  PATIENT
}

model User {
  id                  String   @id @default(uuid())
  password            String
  email               String   @unique
  role                UserRole @default(PATIENT)
  needsPasswordChange Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  admin               Admin?
}

model Admin {
  id          String   @id @default(uuid())
  name        String
  contact     String?
  profile_url String?
  email       String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [email], references: [email])
}
